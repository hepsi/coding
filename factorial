//Write a program to find the factorial upto 10 numbers
#include <iostream>

using namespace std;

int main()
{
  long factorial, n, product;
  int number = 10; //for upto 10 values factorial
  if(number == 1)
     factorial = 1;
  else
     product = 1;
     for(n=2; n<=number; n++)
     {
       product = product * n;
       std::cout << n << "\t" << product << std::endl;
      }
      factorial = product;
      }
std::cout << "The final answer is " << factorial << std::endl;
return 0;
}
